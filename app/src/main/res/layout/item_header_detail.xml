<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleColor="@android:color/darker_gray"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        app:strokeColor="@android:color/darker_gray"
        app:cardElevation="0dp"
        app:strokeWidth="1dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center|start"
                android:layout_toStartOf="@+id/share"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                tools:text="Google I/O Extended"/>

        <ImageView
                android:id="@+id/share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_share"
                android:layout_marginEnd="8dp"
                android:background="?actionBarItemBackground"
        />

        <TextView
                android:id="@+id/scheduleEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center|start"
                android:layout_toStartOf="@id/eventTitle"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/eventTitle"/>

        <TextView
                android:id="@+id/addressEvent"
                android:layout_width="match_parent"
                android:layout_below="@+id/scheduleEvent"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@id/eventTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:gravity="center|start"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubscription"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_button_subscription"
                android:textAllCaps="false"
                android:layout_below="@id/addressEvent"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>