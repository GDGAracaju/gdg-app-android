<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="gdg.aracaju.view.detail.DetailActivity">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:context=".MapsActivity"/>

    <include
            android:id="@+id/header"
            layout="@layout/item_header_detail"
            android:layout_below="@id/map"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <TextView
            android:id="@+id/labelTalks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/title_list_talks"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/talksRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelTalks"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_above="@id/appsTransport"/>

    <ProgressBar style="?android:attr/progressBarStyle"
                 android:id="@+id/loadingStateView"
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:layout_gravity="center"
                 android:layout_centerInParent="true"
                 tools:visibility="gone"/>

    <include layout="@layout/empty_state_layout"
             android:visibility="gone"
             android:id="@+id/emptyStateView"/>

    <include layout="@layout/error_state_layout"
             android:visibility="gone"
             android:id="@+id/errorStateView"/>

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/appsTransport"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
    />
</RelativeLayout>